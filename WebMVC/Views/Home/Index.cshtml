
@{
    ViewBag.Title = "Index";
    var ListaProductos = ViewBag.ListaProductos;
}

<h2>Vista de Productos</h2>



<a href="@Url.Action("Agregar")">Agregar</a>

<br />
<div class="container">
    <div class="row">
        @foreach (var p in ListaProductos)
        {
            <div class="col-lg-4">
                <div class="panel panel-default ">
                    <div class="panel-heading"> @p.Nombre</div>
                    <div class="panel-body">
                        <p>@p.Descripcion</p>
                        <p>@p.Precio</p>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
